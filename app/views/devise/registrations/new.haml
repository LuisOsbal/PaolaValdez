%section.hero
  .hero-body
    .container.has-text-centered
      .box
        %h2 Sign up
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = devise_error_messages!
          .field.is-horizontal
            .field-body
              .field
                %p.control.is-expanded.has-icons-left
                  = f.label :first_name
                  = f.text_field :first_name, autocomplete: "off", :class => "input input is-medium"
              .field
                %p.control.is-expanded.has-icons-left.has-icons-right
                  = f.label :last_name
                  = f.text_field :last_name, autocomplete: "off", :class => "input input is-medium"
              .field
                %p.control.is-expanded.has-icons-left.has-icons-right
                  = f.label :second_last_name
                  = f.text_field :second_last_name, autocomplete: "off", :class => "input input is-medium"
          .field.is-horizontal
            .field-body
              .field
                %p.control.is-expanded.has-icons-left
                  = f.label :first_phone
                  = f.telephone_field :first_phone, autocomplete: "off", :class => "input input is-medium"
              .field
                %p.control.is-expanded.has-icons-left.has-icons-right
                  = f.label :second_phone
                  = f.telephone_field :second_phone, autocomplete: "off", :class => "input input is-medium"
          .field.is-horizontal
            .field-body
              .field
                %p.control.is-expanded.has-icons-left
                  = f.label :email
                  = f.email_field :email, autocomplete: "off", :class => "input input is-medium"
          .field.is-horizontal
            .field-body
              .field
                %p.control.is-expanded.has-icons-left
                  = f.label :password
                  - if @minimum_password_length
                    %em
                      (#{@minimum_password_length} characters minimum)
                  = f.password_field :password, autocomplete: "off", :class => "input input is-medium"
              .field
                %p.control.is-expanded.has-icons-left.has-icons-right
                  = f.label :password_confirmation
                  = f.password_field :password_confirmation, autocomplete: "off", :class => "input input is-medium"
          .field.is-horizontal
            .field-body
              .field
                .control
                  .actions
                    = f.submit "Sign up", :class => "button button is-block is-info is-fullwidth"
      %p.has-text-grey
        %a{:href => new_user_session_path } Sign In
        %a{:href => new_user_password_path } Forgot Password
        %a{:href => "../"} Need Help?
