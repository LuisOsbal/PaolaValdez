.home-columns.columns
  .column.is-half.is-home-left-column
    %p Paola Valdez
  .column.has-background-blue.is-home-right-column
    .lang-choser.is-hidden-touch
      %a.lang.is-active{:href => "/es"} es
      %a.lang{:href => "/en"} en



    %h1#hi= t("hello")
    %p
      =image_tag("pao.jpg", alt: "Paola Valdez")
    %p= t("main_description")
    %p= t("description")
    %p
      = t("read_more")

      = succeed "" do
        %a{:href => "https://www.linkedin.com/in/paolavaldez/", target: '_blank'}= t("about_me")
      = t("or")
      = succeed "." do
        %a{:href => "https://www.linkedin.com/in/paolavaldez/", target: '_blank'}= t("my_projects")
    %p
      =t('freelance')
      = succeed "!" do
        %a{:href => "#"}= t("contact_me")
  = render partial: "footer"
